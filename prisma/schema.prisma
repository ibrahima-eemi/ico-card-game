generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // Connexion pour les requêtes
  directUrl = env("DIRECT_URL")   // Connexion directe pour les migrations
}

// Modèle Room
model Room {
  id        String     @id @default(uuid())
  host      String
  status    RoomStatus @default(WAITING) // Par défaut, la salle est "en attente"
  players   Player[]
  createdAt DateTime   @default(now())   // Date de création
  updatedAt DateTime   @updatedAt       // Mise à jour automatique
}

// Modèle Player
model Player {
  id        String   @id @default(uuid())
  name      String
  role      String
  roomId    String   // Clé étrangère pour associer un joueur à une Room
  room      Room     @relation(fields: [roomId], references: [id]) // Relation avec Room
  createdAt DateTime @default(now())
}

// Enumération RoomStatus
enum RoomStatus {
  WAITING       // Salle en attente de joueurs
  IN_PROGRESS   // Partie en cours
  FINISHED      // Partie terminée
}
